{
  "name": "nestjs-plugins",
  "private": true,
  "repository": "git@github.com:g59/nestjs-plugins.git",
  "author": "g59",
  "engines": {
    "npm": "^8.0.0"
  },
  "scripts": {
    "build": "lerna run build --include-dependents",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "lerna run lint --parallel",
    "test": "jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@9renpoto/tsconfig": "7.5.0",
    "@nestjs/testing": "^9.1.1",
    "@secretlint/secretlint-rule-preset-recommend": "5.2.4",
    "@types/jest": "29.2.1",
    "can-npm-publish": "1.3.6",
    "husky": "8.0.1",
    "lerna": "6.0.1",
    "lerna-changelog": "2.2.0",
    "lint-staged": "13.0.3",
    "secretlint": "5.3.0",
    "ts-jest": "29.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/*.ts"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ],
    "*.{ts,tsx,md}": [
      "deno fmt"
    ]
  },
  "workspaces": [
    "packages/*",
    "example"
  ]
}
