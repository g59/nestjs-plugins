{
  "name": "@app/app",
  "private": true,
  "author": "github.com/9renpoto",
  "scripts": {
    "build": "lerna run build --include-dependents",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-p -l lint:*",
    "lint:es": "npx eslint . --ext=ts,tsx",
    "lint:md": "textlint README.md packages/**/*.md",
    "lint:pkg": "lerna run lint --parallel",
    "lint:ptr": "prettier --check './packages/**/*.{js,jsx,ts,tsx}'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://npm.pkg.github.com/\"'",
    "test": "lerna run test --stream"
  },
  "dependencies": {
    "lerna": "3.20.2",
    "npm-run-all": "4.1.5",
    "typescript": "3.7.4"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "5.5.1",
    "@9renpoto/textlint-config-ja": "5.5.1",
    "@secretlint/secretlint-rule-preset-recommend": "0.7.2",
    "@types/jest": "25.1.3",
    "eslint": "6.8.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lerna-changelog": "1.0.0",
    "lint-staged": "10.0.8",
    "prettier": "1.19.1",
    "prettier-plugin-package": "0.3.1",
    "secretlint": "0.7.3",
    "textlint": "11.6.3",
    "ts-jest": "25.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,jsx,json,yml,toml,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
