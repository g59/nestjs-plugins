{
  "name": "nestjs-plugins",
  "private": true,
  "repository": "git@github.com:g59/nestjs-plugins.git",
  "author": "g59",
  "engines": {
    "npm": "^10.0.0"
  },
  "version": "10.0.0",
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@9renpoto/tsconfig": "^7.6.0",
    "@nestjs/testing": "^10.3.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.67",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.11",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^15.2.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/*.ts"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": [
      "deno fmt"
    ]
  },
  "workspaces": [
    "packages/*",
    "example"
  ]
}
