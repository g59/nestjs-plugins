{
  "name": "nestjs-plugins",
  "private": true,
  "repository": "git@github.com:g59/nestjs-plugins.git",
  "author": "g59",
  "engines": {
    "npm": "^7.0.0"
  },
  "scripts": {
    "build": "lerna run build --include-dependents",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-p -l lint:*",
    "lint:md": "textlint README.md packages/**/*.md",
    "lint:pkg": "lerna run lint --parallel",
    "lint:ptr": "prettier --check './packages/**/*.{js,jsx,ts,tsx}'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "jest"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "7.4.0",
    "@9renpoto/textlint-config-ja": "7.4.0",
    "@9renpoto/tsconfig": "7.4.0",
    "@secretlint/secretlint-rule-preset-recommend": "2.1.1",
    "@types/faker": "5.5.5",
    "@types/jest": "26.0.23",
    "can-npm-publish": "1.3.3",
    "eslint": "7.27.0",
    "faker": "5.5.3",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lerna-changelog": "1.0.1",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.0",
    "prettier-plugin-package": "1.3.0",
    "rimraf": "3.0.2",
    "secretlint": "2.1.1",
    "textlint": "12.0.0",
    "ts-jest": "26.5.6",
    "ts-node": "10.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/*.ts"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,jsx,json,yml,toml,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "example"
  ]
}
