{
  "name": "nestjs-plugins",
  "private": true,
  "repository": "git@github.com:g59/nestjs-plugins.git",
  "author": "g59",
  "engines": {
    "npm": "^9.0.0"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@9renpoto/tsconfig": "^7.6.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/*.ts"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "deno fmt"
    ]
  },
  "workspaces": [
    "packages/*",
    "example"
  ]
}
