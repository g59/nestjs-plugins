{
  "name": "nestjs-plugins",
  "private": true,
  "repository": "git@github.com:piic/nestjs-plugins.git",
  "author": "piic",
  "scripts": {
    "build": "lerna run build --include-dependents",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-p -l lint:*",
    "lint:es": "npx eslint . --ext=ts,tsx",
    "lint:md": "textlint README.md packages/**/*.md",
    "lint:pkg": "lerna run lint --parallel",
    "lint:ptr": "prettier --check './packages/**/*.{js,jsx,ts,tsx}'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "jest"
  },
  "dependencies": {
    "lerna": "3.22.0",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "typescript": "3.9.5"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "6.0.0",
    "@9renpoto/textlint-config-ja": "6.0.0",
    "@secretlint/secretlint-rule-preset-recommend": "2.0.0",
    "@types/faker": "4.1.12",
    "@types/jest": "25.2.3",
    "can-npm-publish": "1.3.2",
    "eslint": "7.2.0",
    "faker": "4.1.0",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lerna-changelog": "1.0.1",
    "lint-staged": "10.2.9",
    "prettier": "2.0.5",
    "prettier-plugin-package": "1.0.0",
    "secretlint": "2.0.0",
    "textlint": "11.6.3",
    "ts-jest": "26.1.0",
    "ts-node": "8.10.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/*.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,jsx,json,yml,toml,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "example"
  ]
}
