{
  "name": "nestjs-plugins",
  "private": true,
  "repository": "git@github.com:g59/nestjs-plugins.git",
  "author": "g59",
  "engines": {
    "npm": ">=10"
  },
  "version": "10.0.0",
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "dotenv -e example/.env.test jest"
  },
  "devDependencies": {
    "@9renpoto/tsconfig": "^7.9.0",
    "@as-integrations/fastify": "^3.0.0",
    "@jest/globals": "^30.1.2",
    "@nestjs/testing": "^11.1.6",
    "dotenv-cli": "^10.0.0",
    "jest-mock-extended": "^4.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/*.ts"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^nestjs-firebase$": "<rootDir>/packages/nestjs-firebase/src",
      "^nestjs-graphql-relay$": "<rootDir>/packages/nestjs-graphql-relay/src",
      "^nestjs-slack-webhook$": "<rootDir>/packages/nestjs-slack-webhook/src",
      "^nestjs-zendesk$": "<rootDir>/packages/nestjs-zendesk/src"
    }
  },
  "workspaces": [
    "packages/*",
    "example"
  ]
}
