{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@9renpoto/tsconfig",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "strictPropertyInitialization": false,
    "target": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "nestjs-firebase": ["packages/nestjs-firebase/src"],
      "nestjs-graphql-relay": ["packages/nestjs-graphql-relay/src"],
      "nestjs-slack-webhook": ["packages/nestjs-slack-webhook/src"],
      "nestjs-zendesk": ["packages/nestjs-zendesk/src"]
    }
  }
}
